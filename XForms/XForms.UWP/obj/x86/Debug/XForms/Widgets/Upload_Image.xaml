<UserControl
    x:Class="XForms.UWP.XForms.Widgets.Upload_Image"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XForms.UWP.XForms.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>      
        <Image x:ConnectionId='1' x:Name="imgImage" Grid.Column="0" MaxHeight="200" MaxWidth="200" HorizontalAlignment="Right" Margin="3,3,15,0" />
        <TextBlock x:ConnectionId='2' x:Name="lblName" Text="No Image Taken" HorizontalAlignment="Stretch" TextAlignment="Right" Grid.Column="1" Margin="3,3,0,0"                        />
    </Grid>
</UserControl>

