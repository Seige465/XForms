<UserControl x:ConnectionId='1'
    x:Class="XForms.UWP.XForms.Popup.Controls.DateTimePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                               >
    <!--xmlns:local="using:XForms.UWP.XForms.Popup.Controls"-->

    <Grid x:ConnectionId='2' x:Name="grdMain" BorderThickness="2" BorderBrush="DarkGray" Background="{ThemeResource SystemControlBackgroundChromeWhiteBrush}" Padding="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='3' x:Name="lblTitle" Margin="0,8,0,0" TextWrapping="Wrap" />
        <StackPanel x:ConnectionId='4' Grid.Row="1" x:Name="stkDateTime" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,5">
            <TimePicker x:ConnectionId='7' x:Name="tmInput" Margin="10,0,0,0"                                   />
            <DatePicker x:ConnectionId='8' x:Name="dtInput" Margin="10,0,0,0"                                   />
        </StackPanel>
        <Button x:ConnectionId='5' x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Grid.Row="2" Width="100" Margin="5,2,5,2"                           />
        <Button x:ConnectionId='6' x:Name="btnSave" Content="Save" HorizontalAlignment="Right" Grid.Row="2" Width="100" Margin="5,2,5,2"                        />
    </Grid>
</UserControl>

